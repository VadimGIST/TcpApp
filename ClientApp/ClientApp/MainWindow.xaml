<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBox x:Name="IpTextBox" Width="200" Margin="10" Text="Enter IP"/>
            <TextBox x:Name="PortTextBox" Width="200" Margin="10" Text="Enter Port"/>
            <Button x:Name="ConnectButton" Content="Connect" Width="200" Margin="10" Click="ConnectButton_Click"/>
            <Button x:Name="ClearButton" Content="Clear Fields" Width="200" Margin="10" Click="ClearButton_Click"/>
            <TextBox x:Name="MessageTextBox" Width="400" Margin="10" Text="Enter Message"/>
            <Button x:Name="SendButton" Content="Send" Width="200" Margin="10" Click="SendButton_Click"/>
            <TextBlock x:Name="StatusTextBlock" Margin="10"/>
            <ListBox x:Name="MessagesListBox" Width="400" Height="150" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
